<div class="col-md-4 aside">

    <!-- Search Widget -->
    <div class="my-4">
        <div class="search">
          <form action="">
            <input type="text" class="form-control" placeholder="Search for...">
            <button class="btn btn-secondary search-btn" type="submit">Go!</button>
          </form>
        </div>
    </div>

    <!-- Aside tabs -->
    <div class="w3-card aside-item">
      <!--tab header-->
      <div class="tab-title">
        <div class="tab-head add-background" onclick="showTab(event,'Popular')">Popular</div>
        <div class="tab-head" onclick="showTab(event,'Recent')">Recent</div>
      </div>
      <hr>
      <!--Popular tab-->
      <div class="w3-container w3-white tabs" id="Popular">
        <!--template collection goes here-->
          <% popularDoc.forEach(function(post){%>
            <% let PostTitle=post.title %>
            <% if(PostTitle.length > 65){%>
              <%PostTitle=PostTitle.substr(0,65)+"..."%>
            <%}%>
            <div class="tab-list">
              <div class="tab-img">
                <img src="<%= post.image %>" alt="<%= PostTitle %>" class="">
              </div>
              <div class="tab-text">
                <p class=""><a href="/category/<%= post.category %>/<%= post._id %>"><%= PostTitle %></a></p>
              </div>  
            </div>
          <%})%>
      </div>

      <!--Recent tab-->
      <div class="w3-container w3-white tabs" style="display: none;" id="Recent">
        <!--template collection goes here-->
          <% recentDoc.forEach(function(post){%>
            <% let PostTitle=post.title %>
            <% if(PostTitle.length > 65){%>
              <%PostTitle=PostTitle.substr(0,65)+"..."%>
            <%}%>
            <div class="tab-list">
              <div class="tab-img">
                <img src="<%= post.image %>" alt="<%= PostTitle %>" class="">
              </div>
              <div class="tab-text">
                <p class=""><a href="/category/<%= post.category %>/<%= post._id %>"><%= PostTitle %></a></p>
              </div>  
            </div>
          <%})%>
      </div>
    </div>

    <!--Ad1-->
    <div class="w3-card aside-item">
      <div class="ad-img">
        <img src="/img/Ad.png" alt="Ad-img">
      </div>
    </div>

    <!--Featured Talent-->
    <div class="featured-talent aside-item">
      <!--Title section-->
      <div class="talent-title">
        <span></span>
        <h3>Featured Talent</h3>
        <span></span>
      </div>
      <!--Talent Img-->
      <div class="col-img card-img-top talent-img">
        <img class="col-img-circle" src="<%= talentDoc[0].image %>" alt="<%= talentDoc[0].title %>">
      </div>
      <!--Title & Description-->
      <div class="talent-info">
        <h5><%= talentDoc[0].title %></h5>
        <p><%= talentDoc[0].description %></p>
        <!--Read more-->
        <a href="/category/<%= talentDoc[0].category %>/<%= talentDoc[0]._id %>" class=""> Read More <i class="fas fa-angle-right"></i></a>
      </div>
      
    </div>

    <!--Ad2-->
    <div class="w3-card aside-item">
      <div class="ad-img">
        <img src="/img/Ad.png" alt="Ad-img">
      </div>
    </div>
    
  </div>